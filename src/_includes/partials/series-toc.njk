<!-- Current Series TOC -->
{% if page.data.series %}
    <section class="mb-4">
        <h4>{{ page.data.series.title }}</h4>
        <p>This article is part {{ page.data.part }} of an article series:</p>
        <ul class="list-unstyled">
            {% for subpost in search.pages(page.data.series.tag, "part") %}
                <li class="mb-2"><a class="link-primary {% if subpost.data.url == url %}link-dark{% endif %}" href="{{ subpost.data.url }}">{{subpost.data.part}}. {{ subpost.data.title }}</a></li>
            {% endfor %}
        </ul>
    </section>
{% endif %}
---
layout: layout/body.njk
---
{% if extra == "multi-pointer" %}
  {% include "partials/multi-pointer.njk" %}
{% endif %}

<div class="grid">
  <section>
    <div>
      {% include "partials/post-details.njk" %}
      {{ intro | md | safe }}
      <br>
      {% if ads.article %}
        {% include "components/ads/display.njk" %}
        <br>
      {% endif %}
      {{ content | safe }}    
      <hr>
      {% include "partials/next-previous.njk" %}
      <hr>
      {% include "components/disqus.njk" %}
    </div>
  </section>
  <!-- Sidebar -->
  <aside>
    {% include "components/search.njk" %}
    {% include "partials/series-toc.njk" %}
    {% include "partials/more-series.njk" %}
    {% include "partials/recommended.njk" %}
    {% if ads.sidebar %}
      {% include "components/ads/plex.njk" %}
    {% endif %}
  </aside>
</div>